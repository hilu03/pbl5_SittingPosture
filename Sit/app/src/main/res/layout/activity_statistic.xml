<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Layout chứa Button trên cùng -->

    <!-- Layout chứa Bar Chart -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonTopLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/barChartLayout"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"> <!-- Chiếm 10% chiều cao -->

        <TextView
            android:id="@+id/selectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Date:"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/datePickerButton"
            style="?android:spinnerStyle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="openDatePicker"
            android:text="JAN 01 2020"
            android:textColor="@color/blue"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barChartLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonTopLayout"
        app:layout_constraintBottom_toTopOf="@id/pieChartLayout"
        app:layout_constraintHeight_percent="0.4"> <!-- Chiếm 40% chiều cao -->

        <!-- Bar Chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-40dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Layout chứa Pie Chart -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pieChartLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/barChartLayout"
        app:layout_constraintBottom_toTopOf="@id/buttonBottomLayout"
        android:layout_marginRight="150dp"
        app:layout_constraintHeight_percent="0.3"> <!-- Chiếm 40% chiều cao -->

        <!-- Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Legend Layout -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Layout chứa Button dưới cùng -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pieChartLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"> <!-- Chiếm 10% chiều cao -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/bottom_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/btnHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_home"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home"

                        />

                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnPlay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_play"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/text_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnStatistic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_statistic"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/bar_chart"
                        app:tint = "@color/green"
                        />

                    <TextView
                        android:id="@+id/text_statistic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistic"
                        android:textSize="16sp"
                        android:textColor="@color/green" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="197dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/pieChartLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical">

            <!--View to display the yellow color icon-->

            <!--Text view to display wrong -->
            <View
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:background="#63b3f3" />

            <TextView
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="Wrong" />

        </LinearLayout>

        <!--Linear layout to display correct-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp">

            <!--View to display the green color icon-->
            <View
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:background="#fbd34d" />

            <!--Text view to display python text -->
            <TextView
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="Correct" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>